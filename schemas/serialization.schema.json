{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lionweb.org/serialization.schema.json",
  "title": "LIonWeb serialization format",
  "type": "object",
  "properties": {
    "serializationFormatVersion": {
      "const": "1"
    },
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/SerializedNode"
      }
    }
  },
  "required": [
    "serializationFormatVersion",
    "nodes"
  ],
  "$defs": {
    "Id": {
      "type": "string",
      "minLength": 1
    },
    "SerializedNode": {
      "type": "object",
      "properties": {
        "concept": {
          "type": "string"
        },
        "id": {
          "$ref": "#/$defs/Id"
        },
        "properties": {
          "type": "object"
        },
        "children": {
          "type": "object"
        },
        "references": {
          "type": "object"
        }
      },
      "required": [
        "concept",
        "id",
        "properties",
        "children",
        "references"
      ]
    }
  }
}
